{
    "extends": "tslint:recommended",
    "rulesDirectory": [],
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": false,
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "max-classes-per-file": false,
        "member-access": false,
        "variable-name":false
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}